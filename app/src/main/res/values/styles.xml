<resources>

    <!-- Base application theme. -->
    <style name="DarkilliantTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/holo_blue_dark</item>
    </style>

    <style name="Momo">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="DarkilliantTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkilliantTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DarkilliantTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
