<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/refresh_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/launch_calcul_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCUL"
            android:layout_weight="6"/>
        <Button
            android:id="@+id/show_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show dialog"/>
        <Button
            android:id="@+id/launch_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch list"/>
        <Button
            android:id="@+id/launch_notepad_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch notepad"/>
        <Button
            android:id="@+id/launch_test_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch test fragment"/>
        <Button
            android:id="@+id/launch_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch web"/>
        <Button
            android:id="@+id/launch_database"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch database"/>
    </LinearLayout>



    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="10"/>


</LinearLayout>